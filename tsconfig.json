{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017", "es2021"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./app"],
      "@app/*": ["./app/*"],
      "@components": ["./app/components"],
      "@components/*": ["./app/components/*"],
      "@atoms": ["./app/components/atoms"],
      "@atoms/*": ["./app/components/atoms/*"],
      "@molecules": ["./app/components/molecules"],
      "@molecules/*": ["./app/components/molecules/*"],
      "@organisms": ["./app/components/organisms"],
      "@organisms/*": ["./app/components/organisms/*"],
      "@templates": ["./app/components/templates"],
      "@templates/*": ["./app/components/templates/*"],
      "@screens": ["./app/screens"],
      "@screens/*": ["./app/screens/*"],
      "@navigation": ["./app/navigation"],
      "@navigation/*": ["./app/navigation/*"],
      "@utils": ["./app/utils"],
      "@utils/*": ["./app/utils/*"],
      "@types": ["./app/types"],
      "@types/*": ["./app/types/*"],
      "@services": ["./app/services"],
      "@services/*": ["./app/services/*"],
      "@hooks": ["./app/hooks"],
      "@hooks/*": ["./app/hooks/*"],
      "@constants": ["./app/constants"],
      "@constants/*": ["./app/constants/*"],
      "@assets": ["./app/assets"],
      "@assets/*": ["./app/assets/*"],
      "@store": ["./app/store"],
      "@store/*": ["./app/store/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "app/**/*", "types.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
